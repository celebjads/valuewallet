@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetStatics</title>
</head>
<body>


    <div class="container">
        <img  src="http://www.techstars.com/uploads/blockchain-logo-967x675.jpg" style="width:100px;height:100px;">

        <h1 style="padding-bottom:10px;color:#3399ff;">Bitcoin Address <small>Addresses are identifiers which you use to send bitcoins to another person.</small></h1>






           <div class="row-fluid" style="margin-bottom:30px;">

               <span  style="margin-left:30px;cursor:pointer;color:white;background:#3399ff;margin-left:0px;display:inline-block;border:solid 1px #3399ff;padding:10px;width:150px;padding-left:70px;">Address Statistics</span>
               <span style="margin-left:30px;cursor:pointer;border:solid 1px #3399ff;padding:10px;width:150px;padding-left:80px;display:inline-block">Wallet Address</span>
               <span style="cursor:pointer;border:solid 1px #3399ff;padding:10px;width:150px;margin-left:30px;display:inline-block;padding-left:70px;">Transaction Push</span>
             
            </div>
        <div class="row-fluid" style="margin-bottom:30px;">

           
            <span style="cursor:pointer;border:solid 1px #3399ff;padding:10px;width:150px;display:inline-block;padding-left:70px;">Blocks</span>
            <span style="cursor:pointer;border:solid 1px #3399ff;padding:10px;width:150px;margin-left:30px;display:inline-block;padding-left:70px;">Transaction Broadcast</span>
            <span style="cursor:pointer;border:solid 1px #3399ff;padding:10px;width:150px;margin-left:30px;display:inline-block;padding-left:70px;">Unspent Amount</span>
        </div>



            <div class="row-fluid">
                <div class="col-md-5">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th colspan="2">Summary</th>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td><a href="/address/1LxYLA3tSwJtRKVrqURYNWgu3h6uahrU4k">@ViewBag.Address</a></td>
                            </tr>
                            <tr class="visible-desktop">
                                <td>Hash 160</td>
                                <td><a href="/address/daeb6bc5dc145fbf9e52f854f82fbc3f5c4c914e">@ViewBag.Hash160</a></td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <div class="col-md-4" style="overflow:visible;">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th colspan="3">Transactions</th>
                            </tr>
                            <tr>
                                <td>No. Transactions</td>
                                <td id="n_transactions">@ViewBag.Transactions</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Total Received</td>
                            <td id="total_received"><font color="green"><span data-c="0">@ViewBag.Received BTC</span></font></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Final Balance</td>
                            <td id="final_balance"><font color="green"><span data-c="0">@ViewBag.Balance BTC</span></font></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>


            </div>


        </div>



    </div>

</body>
</html>
